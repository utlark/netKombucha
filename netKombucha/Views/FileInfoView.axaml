<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="690" d:DesignHeight="333"
             x:Class="netKombucha.Views.FileInfoView"
             DataContext="{Binding $parent[Window].DataContext.MainViewModel}">

    <UserControl.Styles>
        <Style Selector="Button.Ok">
            <Setter Property="Background" Value="{StaticResource Blue}" />
        </Style>
        <Style Selector="Button.Ok:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource DarkBlue}" />
        </Style>
    </UserControl.Styles>

    <Border Width="690" Height="333" Background="{StaticResource White}" CornerRadius="5" IsVisible="{Binding IsFileInfoOpen}">
        <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="40">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Vertical" Spacing="20">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Left" Foreground="{StaticResource TextGray}"
                           FontFamily="{StaticResource Bold}" FontSize="20" Text="Архив настроек камер" />
                <StackPanel Orientation="Vertical" Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock TextAlignment="Left" Foreground="{StaticResource TextGray}"
                                   FontFamily="{StaticResource Bold}" FontSize="16" Text="Имя:" />
                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Foreground="{StaticResource TextGray}"
                                   FontFamily="{StaticResource Regular}" FontSize="14" Text="{Binding ConfigurationPackageFileFullName}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock TextAlignment="Left" Foreground="{StaticResource TextGray}"
                                   FontFamily="{StaticResource Bold}" FontSize="16" Text="Путь:" />
                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Foreground="{StaticResource TextGray}"
                                   FontFamily="{StaticResource Regular}" FontSize="14" Text="{Binding ConfigurationPackagePath}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Button Classes="Ok" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200" Height="49" CornerRadius="25"
                    Command="{Binding CloseFileInfo}">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"
                           FontFamily="{StaticResource Bold}" FontSize="12" Text="Ок" />
            </Button>
        </Panel>
    </Border>
</UserControl>