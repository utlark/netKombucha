<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:netKombucha.Converters"
             xmlns:local="using:netKombucha"
             x:Class="netKombucha.App">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <Color x:Key="Grey">#FF4D5057</Color>
        <Color x:Key="Gold">#FFF8C822</Color>
        <Color x:Key="Blue">#FF00AEEF</Color>
        <Color x:Key="White">#FFFFFFFF</Color>
        <Color x:Key="Black">#FF000000</Color>
        <Color x:Key="TextGray">#FF444444</Color>
        <Color x:Key="DarkGray">#FF3A3C41</Color>
        <Color x:Key="DarkBlue">#FF0093CD</Color>
        <Color x:Key="TransparentWhite">#99FFFFFF</Color>

        <converters:TextShorterConverter x:Key="TextShorterConverter" />

        <FontFamily x:Key="Regular">/Assets/Fonts/NotoSans-Regular.ttf#Noto Sans</FontFamily>
        <FontFamily x:Key="Bold">/Assets/Fonts/NotoSans-Bold.ttf#Noto Sans</FontFamily>
        <FontFamily x:Key="ExtraBold">/Assets/Fonts/NotoSans-ExtraBold.ttf#Noto Sans</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="/Styles/BaseStyle.axaml" />
    </Application.Styles>
</Application>